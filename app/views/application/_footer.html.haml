-if logged_in?
  -if current_user.admin?
    .ui.small.modal#create-group-modal
      .ui.top.attached.label
        Create Group
      .ui.form.group-form-control
        = render 'groups/form', group: Group.new
    .ui.small.modal#create-repository-modal
      .ui.top.attached.label
        Create Repository
      .ui.form#create-group-form-control
        =form_for current_user.repositories.new do |g|
          .field
            =g.text_field :title, placeholder: "Repository Title"
          .field
            =g.submit "Create Repository", class: "ui button"

