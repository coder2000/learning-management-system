- if current_user.repositories.present? && current_user.admin?
  .form-group
    %label Repositories
    = select_tag :repositories,
     options_from_collection_for_select(current_user.repositories,
      :id, :title), include_blank: true, class: 'custom-select'
  .form-group
    %label Video
    = post.select :video, file_options(current_user.repositories, 'video'),
     include_blank: true, class: 'custom-select'
  .form-group#file-attachment-field
    %label Other attachments
    = select_tag :attachments, file_options(current_user.repositories,
     'application'), id: 'post-attachments', multiple: true
- else
  .box
    %i.folder.icon.massive
    %h2 First, create a repository and upload a files to attach.
