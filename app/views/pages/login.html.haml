.row
  = form_tag login_path, method: :post, class: 'col s6 offset-6' do
    .row
      .col.s6.input-field
        =text_field_tag :email, nil, placeholder: 'E-mail', autofocus: true
    .row
      .col.s6.input-field
        =password_field_tag :password, nil, placeholder: 'Password'
    .row
      .col.s4
        =check_box :remember, nil, class: 'filled-in'
        %label{ for: 'remember_' }
          Remember Me
      .col.s4
        = link_to 'Forgot Password', 'javascript:;'
    .row
      .col.s4
        %button{ class: 'btn waves-effect waves-light', type: 'submit' }
          Login
          %i.material-icons send
      .field
        .ui.large.standard.option.button.login-buttons#sign-up-button
          Sign Up
.ui.small.option.modal#sign-up-modal
  .ui.top.attached.label
    Sign up as
  .ui.buttons#role-choices
    =link_to 'Student', new_user_path('student'), class: 'ui button role-choice'
    .or
    =link_to 'Instructor', new_user_path('instructor'), class: 'ui button role-choice'
